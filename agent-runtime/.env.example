# Agent Runtime (FastAPI) - exemplo de variáveis de ambiente
# Copie para `agent-runtime/.env` se for rodar localmente sem Docker.

PORT=5000
SERVICE_NAME=agent-runtime
ENVIRONMENT=development
LOG_LEVEL=INFO

# Infra
REDIS_URL=redis://localhost:6380

# Criptografia (obrigatório para decrypt de tokens/secrets no DB)
APP_ENCRYPTION_KEY_CURRENT=
APP_ENCRYPTION_KEY_PREVIOUS=
APP_ENCRYPTION_KEY=

# Supabase (DB usado diretamente via asyncpg)
SUPABASE_URL=http://localhost:54321
SUPABASE_SERVICE_ROLE_KEY=
# Em Supabase Cloud, prefira a URL do Pooler (IPv4) em ambientes sem IPv6 (ex.: Railway).
SUPABASE_DB_URL=postgresql://postgres:<DB_PASSWORD>@db.<PROJECT_REF>.supabase.co:5432/postgres
DB_POOL_MIN=1
DB_POOL_MAX=5

# Flags
DISABLE_CONNECTIONS=false
DISABLE_WORKERS=false

# OpenAI
# ⚠️ As credenciais (api_key) NÃO são lidas de env.
# Configure pelo Backoffice em `core.integration_credential_sets` + `core.company_integration_bindings`.
# (Modelos/base_url podem ser definidos no `config` do credential set/binding.)

# Observabilidade (opcional)
OTEL_TRACING_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
