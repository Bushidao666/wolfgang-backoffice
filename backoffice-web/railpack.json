{
  "$schema": "https://schema.railpack.com",
  "provider": "shell",
  "buildAptPackages": ["git", "ca-certificates"],
  "packages": {
    "node": "20"
  },
  "steps": {
    "build": {
      "inputs": [{ "step": "packages:mise" }, "."],
      "commands": ["chmod +x start.sh railway-build.sh railway-start.sh", "bash ./railway-build.sh"]
    }
  },
  "deploy": {
    "inputs": [
      {
        "step": "packages:mise",
        "include": [
          "/mise/shims",
          "/mise/installs",
          "/usr/local/bin/mise",
          "/etc/mise/config.toml",
          "/root/.local/state/mise"
        ]
      },
      "..."
    ],
    "paths": ["/mise/shims"]
  }
}
