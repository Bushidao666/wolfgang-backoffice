{
  "name": "@wolfgang/backoffice-api",
  "version": "0.1.0",
  "private": true,
  "description": "Wolfgang Backoffice API (Nest.js)",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch --sourceRoot .",
    "start:debug": "nest start --debug --watch --sourceRoot .",
    "openapi:generate": "ts-node scripts/generate-openapi.ts",
    "backfill:encrypted-secrets": "ts-node scripts/backfill-encrypted-secrets.ts",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:cov": "jest --config jest.config.ts --coverage",
    "test:integration": "npx supabase start --workdir .. --exclude studio --yes && npx supabase db push --workdir .. --local --include-roles && docker compose -f ../infra/compose/docker-compose.yml up -d redis && jest --config test/jest.integration.config.ts",
    "test:rls": "npx supabase test db --workdir ..",
    "test:rls:e2e": "npx supabase start --workdir .. --exclude studio --yes && npx supabase db push --workdir .. --local --include-roles && jest --config test/jest.rls.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.8",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.8",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/platform-socket.io": "^10.4.20",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/websockets": "^10.4.20",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@supabase/supabase-js": "^2.57.0",
    "@wolfgang/contracts": "0.1.0",
    "@wolfgang/crypto": "0.1.0",
    "@wolfgang/integrations": "0.1.0",
    "@wolfgang/logger": "0.1.0",
    "ajv": "^8.17.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "pdf-parse": "^1.1.4",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.17.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pdf-parse": "^1.1.5",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
